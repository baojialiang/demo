
<html>
<head>
  <title>admin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
	<h1>Demo || <%= @page_title || "admin area" %></h1>
</div>
<div id="main">
	<% if !flash[:notice_info].blank? %>
		<div id="notice_info"><%= flash[:notice_info] %></div>
	<% elsif !flash[:error].blank? %>
		<div id = "notice_error">%= flash[:notice_error] %></div>
	<% end %>
	<div class="container-fluid" id="content">
		<div class="row-fluid">
			<div class="span2"><!-- sidebar stuff --></div>
			<div class="span10"><%= yield %></div>
		</div>
	</div>
</div>
<div id="footer">
	<div id="copyright">
		<p>&copy; baojialiang's demo</p>
	</div>
</div>

</body>
</html>

<% @page_title = "Login"	%>

<div class="login">
	<%= form_tag(:action => 'attempt_login') do	%>
	<table>
		<tr>
			<td><%= label_tag(:email) %></td>
			<td><%= text_field_tag(:email) %></td>
		</tr>
		<tr>
			<td><%= label_tag(:password) %></td>
			<td><%= password_field_tag(:password) %></td>			
		</tr>
		<tr>
			<td><%= submit_tag("Sign in") %></td>
			<td>
				<button class="redirect_button">
					<%=	link_to("Register", :controller => "user", :action => "new")	%>
				</button>
			</td>			
		</tr>

	</table>
	<% end %>
	<div class = "options">
		<%= link_to("See team's vacation record", :controller => "user", :action => "list") %>
	</div>
</div>

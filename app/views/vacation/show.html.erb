
<%= link_to("<< back to list", {:action => "list"})%>

<div>Show Vacation</div>
<div>
	<table>
		<tr>
			<th>Name</th>
			<td> <%= @vacation.user.first_name + " " + @vacation.user.last_name %></td>
		</tr>
		<tr>
			<th>Request hours</th>
			<td><%= @vacation.request_hours %></td>
		</tr>
		<tr>
			<th>Remain hours</th>
			<td><%= @vacation.remain_hours	%></td>
		</tr>
		<tr>
			<th>Created at</th>
			<td><%=	@vacation.created_at.to_s(:db)	%></td>
		</tr>
		<% if @vacation.created_at.to_s(:db) != @vacation.updated_at.to_s(:db) %>
		<tr>
			<th>Updated at</th>
			<td><%=	@vacation.updated_at.to_s(:db)	%></td>
		</tr>
		<% end %>
		<tr>
			<th>content</th>
			<td><%=	@vacation.leave_text	%></td>
		</tr>
	</table>
</div>

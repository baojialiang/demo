<%= link_to("<< Back to List", {:controller => "vacation", :action => "list"})%>

<div>
	<h2>Create vacation</h2>
	<%= form_for(:vacation, :url => {:action => "create"}) do |f|	%>
		<table>
			<tr>
				<th>request_hours</th>
				<td> <%= f.text_field(:request_hours) %></td>
			</tr>
			<tr>
				<th>content</th>
				<td><%= f.text_field(:leave_text) %></td>
			</tr>
		</table>
		
		<div>
			<%= submit_tag("Create Vacation Request")%>
		</div>
	<% end %>

	
</div>

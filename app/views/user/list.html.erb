<% @page_title = "user list"%>

<div>
	<%= link_to("register a new user", {:action => "new"})	%>
</div>
<div>
	<%= link_to("create a vacation request", {:controller => "vacation", :action => "new"})%>
</div>

<div>
	<h2>user list</h2>
	
	<table>
		<tr>
			<th>email</th>
			<th>first name</th>
			<th>last name</th>
			<th>create time</th>
			
		</tr>
		<% @users.each do |user|%>
		<tr>
			<td><%= user.email  %></td>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.created_at.to_s(:db) %></td>
		</tr>
		<% end %>
	</table>
	
</div>